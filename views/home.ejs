
    <h1>Codeial /<%= title %></h1>

    <section id="feed-posts">
        <h4>Posts</h4>

        <form action="/posts/create" id="new-post-form" method="post">
                <textarea name="content" id="" cols="30" rows="4" placeholder="Type here.."></textarea>
                <input type="submit" value="post">
        </form>


        <div id="posts-list-container">
            <ul>
                <% for(post of posts){ %>
                    <li>
                        <p>
                        <small>
                            <%= post.user.name%>
                            <br>
                            <%= post.content%>
                            
                        </small>
                        </p>
                    </li>

                    <% } %>
            </ul>
        </div>
    </section>
    